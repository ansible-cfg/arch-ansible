[Unit]
Description=Xorg server for display %i
Documentation=man:Xorg(1)

After=x11@%i.socket
Requires=x11@%i.socket

[Service]
Environment=DISPLAY=:%I
ExecStart=/usr/bin/Xorg $DISPLAY -nolisten tcp -noreset -ardelay 180 -arinterval 35 -verbose 2 "vt1"
SuccessExitStatus=0 1

[Install]
WantedBy=default.target
