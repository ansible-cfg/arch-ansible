#! /bin/bash

set -o errexit
set -o nounset

ansible-playbook -i localhost-inventory playbook.yml -v \
  --ask-become-pass \
  -e root_device=/dev/mapper/vgcrypt-root \
  -e ssd_device=/dev/sda2 \
  -e '{"user": {"name": "vagrant", "group": "vagrant", "shell": "/usr/bin/zsh", "email": "foo@bar.com"}}'
